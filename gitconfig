[color]
  ui = auto

[core]
  excludesfile = ~/.gitignore_global
	editor = atom --wait
  quotepath = false

[push]
  default = simple

[commit]
  template = ~/.gitmessage

[alias]
  a = add
  aa = add --all
  amend = commit -a --amend
  br = branch -a --color -v
  branches = branch -a --color -v
  c = commit
  ci = commit
  cm = commit -m
  co = checkout
  cob = checkout -b
  d = diff
  dif = diff
  pom = push origin master
  phm = push heroku master
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  pt = push --tags
  s = status
  st = status

[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
  required = true

[include]
  path = ~/.gitconfig.local
[diff]
	compactionHeuristic = true
