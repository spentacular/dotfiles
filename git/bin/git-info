#!/usr/bin/env bash

NOCOLOR='\033[0m'
GREEN='\033[0;32m'

LOCAL_BRANCHES=$(git branch -l | sed 's/* /  /')
REMOTE_BRANCHES=$(git branch -r)
REMOTES=$(git remote -v | sed "s/^/  /")

colorful() {
  echo -e "${GREEN}$@${NOCOLOR}"
}

echo
colorful "Remote URLS:"
echo "$REMOTES"
echo

colorful "Local Branches:"
echo "$LOCAL_BRANCHES"
echo

colorful "Remote Branches:"
echo "$REMOTE_BRANCHES"
